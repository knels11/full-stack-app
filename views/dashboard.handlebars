{{#if pets.length}}
<section>
  <h2>Your Pets</h2>
  <ol>
    {{#each pets as |pets|}}
    <li>
      {{> pet-info pet}}
      <a href="/dashboard/edit/{{pet.id}}" class="edit-link">Edit pet</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}



