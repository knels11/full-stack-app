
<article class="post">
  <div class="title">
    <a href="{{pet_name}}" target="_blank">{{pet_age}}</a>
    <span>({{pet_name}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/pets/{{id}}">{{pets.length}} {{format_plural "comment" pets.length}}</a>
  </div>
</article>